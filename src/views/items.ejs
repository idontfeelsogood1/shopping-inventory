<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% items.forEach(item => { %>
        <form action="/items/category/<%= item.category_id %>" method="GET">
            <button type="submit"><%= item.category_name %></button>
        </form>
    <% }) %>
    <ul>
    <% items.forEach(item => { %>
        <li>
        <h3><%= item.name %></h3>
        <img src="<%= item.img_path %>" alt="<%= item.name %>" width="150">
        <p>Price: $<%= item.price %></p>
        <p>Category: <%= item.category_name %></p>
        </li>
    <% }) %>
    </ul>
</body>
</html>
<!-- ADD A UPDATE/REMOVE BTN-->
<li>
    <h3><%= item.name %></h3>
    <img src="<%= item.img_path %>" alt="<%= item.name %>" width="150">
    <p>Price: $<%= item.price %></p>
    <p>Category: <%= item.category_name %></p>
    <form action="/items/<%= item.item_id %>/update" method="GET">
        <button type="submit">Update Item</button>
    </form>
    <form action="/items/<%= item.item_id %>/remove" method="POST">
        <button type="submit">Remove Item</button>
    </form>
</li>